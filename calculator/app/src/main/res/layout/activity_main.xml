<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/operations"
        style="@style/AppTheme.Calculator.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:gravity="right"
        android:hint="Operations..." />

    <TextView
        android:id="@+id/result"
        style="@style/AppTheme.Calculator.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:gravity="right"
        android:textSize="60dp"
        android:text="Result " />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignBounds"
        android:columnCount="4"
        android:rowCount="6"
        tools:context=".MainActivity">



        <TextView
            android:id="@+id/number_7"
            style="@style/AppTheme.Calculator.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:onClick="onClickNumber7"
            android:layout_column="0"
            android:text="7" />

        <TextView
            android:id="@+id/number_8"
            style="@style/AppTheme.Calculator.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="onClickNumber8"
            android:text="8" />

        <TextView
            android:id="@+id/number_9"
            style="@style/AppTheme.Calculator.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="onClickNumber9"
            android:text="9" />

        <TextView
            android:id="@+id/division_sign"
            style="@style/AppTheme.Calculator.Red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:onClick="onClickDivisionSign"
            android:text="/" />

        <TextView
            android:id="@+id/number_4"
            style="@style/AppTheme.Calculator.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onClickNumber4"
            android:text="4" />

        <TextView
            android:id="@+id/number_5"
            style="@style/AppTheme.Calculator.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="onClickNumber5"
            android:text="5" />

        <TextView
            android:id="@+id/number_6"
            style="@style/AppTheme.Calculator.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="onClickNumber6"
            android:text="6" />

        <TextView
            android:id="@+id/multiplication_sign"
            style="@style/AppTheme.Calculator.Red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:onClick="onClickMultiplicationSign"
            android:text="x" />

        <TextView
            android:id="@+id/number_1"
            style="@style/AppTheme.Calculator.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="onClickNumber1"
            android:text="1" />

        <TextView
            android:id="@+id/number_2"
            style="@style/AppTheme.Calculator.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:onClick="onClickNumber2"
            android:text="2" />

        <TextView
            android:id="@+id/number_3"
            style="@style/AppTheme.Calculator.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:onClick="onClickNumber3"
            android:text="3" />

        <TextView
            android:id="@+id/subtraction_sign"
            style="@style/AppTheme.Calculator.Red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:onClick="onClickSubtractionSign"
            android:text="-" />

        <TextView
            android:id="@+id/dot"
            style="@style/AppTheme.Calculator.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:onClick="onClickDotSign"
            android:layout_gravity="fill_horizontal"
            android:text="." />

        <TextView
            android:id="@+id/number_0"
            style="@style/AppTheme.Calculator.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:onClick="onClickNumber0"
            android:text="0" />

        <TextView
            android:id="@+id/equal_sign"
            style="@style/AppTheme.Calculator.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="2"
            android:onClick="onClickEqualSign"
            android:text="=" />

        <TextView
            android:id="@+id/addition_sign"
            style="@style/AppTheme.Calculator.Red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="3"
            android:onClick="onClickAdditionSign"
            android:layout_gravity="fill_horizontal"
            android:text="+" />

    </GridLayout>
</LinearLayout>






